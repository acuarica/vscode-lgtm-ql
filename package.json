{
    "name": "lgtm-ql",
    "displayName": "lgtm.com QL",
    "description": "Run QL queries on lgtm.com from Visual Studio Code",
    "version": "0.0.1",
    "publisher": "Acuarica",
    "engines": {
        "vscode": "^1.24.0"
    },
    "categories": [
        "Other",
        "Programming Languages"
    ],
    "activationEvents": [
        "onCommand:extension.runQLQuery"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "ql",
                "aliases": [
                    "QL"
                ],
                "extensions": [
                    ".ql"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "commands": [
            {
                "command": "extension.runQLQuery",
                "title": "Run QL Query"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "@types/request": "^2.47.0",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    }
}
